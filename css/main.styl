@import 'colors.styl'
@import 'mixins.styl'


baseFont = 16
PX = (1/16)em

*
	bbox()

body, html
	rect 100%
	margin 0
	padding 0
	overflow hidden
	font-size (baseFont)px
	font-family monospace
	background-color: #ffffff
	background-image:url('data:image/svg+xml;base64,');


.rect
	background-color #ccc

.main-l
	min-width  100%
	min-height 100%
	position relative
	margin 0 auto

.place-preview-e
	position: absolute
	border 1px solid rgba(0,0,0,.2)
	background-color rgba(0,0,0,.1)

.block-e
	@extends .place-preview-e
	border-color rgba(rgb(c-green1),.95)
	background-color rgba(rgb(c-green1),.75)
	background-color rgba(rgb(c-green1),0.1)


